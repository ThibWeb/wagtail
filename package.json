{
  "name": "wagtail",
  "version": "1.0.0",
  "repository": "https://github.com/wagtail/wagtail",
  "private": true,
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/"
    ],
    "setupFiles": [
      "./client/tests/adapter.js",
      "./client/tests/stubs.js",
      "./client/tests/mock-fetch.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "devDependencies": {
    "@babel/cli": "7.1.5",
    "@babel/core": "7.1.6",
    "@babel/plugin-proposal-class-properties": "7.1.0",
    "@babel/plugin-proposal-decorators": "7.1.6",
    "@babel/plugin-proposal-object-rest-spread": "7.0.0",
    "@babel/preset-env": "7.1.6",
    "@babel/preset-react": "7.0.0",
    "babel-jest": "23.6.0",
    "babel-loader": "8.0.4",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.21",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.0",
    "eslint": "^2.9.0",
    "eslint-config-wagtail": "0.1.1",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-import": "^1.8.1",
    "eslint-plugin-jsx-a11y": "^1.5.3",
    "eslint-plugin-react": "^5.2.2",
    "expose-loader": "^0.7.4",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "~4.0.0",
    "gulp-cssnano": "^2.1.2",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^4.0.1",
    "gulp-size": "^2.1.0",
    "gulp-sourcemaps": "~2.6.1",
    "gulp-util": "~3.0.8",
    "jest": "23.6.0",
    "npm-run-all": "^4.1.5",
    "react-test-renderer": "^16.2.0",
    "redux-mock-store": "^1.3.0",
    "stylelint": "^8.4.0",
    "stylelint-scss": "^2.2.0",
    "webpack": "4.26.1",
    "webpack-cli": "3.1.2"
  },
  "dependencies": {
    "core-js": "^2.5.3",
    "draft-js": "0.10.5",
    "draftail": "^0.17.2",
    "element-closest": "^2.0.2",
    "focus-trap-react": "^3.1.0",
    "prop-types": "^15.6.0",
    "react": "16.6.3",
    "react-dom": "16.6.3",
    "react-redux": "5.1.1",
    "react-streamfield": "0.6.6",
    "react-transition-group": "^1.1.3",
    "redux": "4.0.1",
    "redux-thunk": "2.3.0",
    "uglifyjs-webpack-plugin": "2.0.1",
    "whatwg-fetch": "^2.0.3"
  },
  "scripts": {
    "build": "npm run gulp:prod:build && npm run webpack:prod:build",
    "dist": "NODE_ENV=production npm run build",
    "watch": "npm-run-all --parallel gulp:dev:watch webpack:dev:watch",
    "start": "npm run watch",
    "gulp:dev:watch": "gulp watch",
    "gulp:prod:build": "gulp build",
    "webpack:dev:watch": "webpack --config ./client/webpack/dev.config.js",
    "webpack:prod:build": "webpack --config ./client/webpack/prod.config.js",
    "lint:js": "eslint --max-warnings 16 ./client",
    "lint:css": "stylelint **/*.scss",
    "lint": "npm run lint:js",
    "test": "npm run test:unit",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage"
  }
}
